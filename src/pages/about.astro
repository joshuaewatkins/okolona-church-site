---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const allBeliefs = await getCollection('beliefs');
const sortedBeliefs = allBeliefs.sort((a, b) => a.data.order - b.data.order);
---

<MainLayout title="ABOUT US">
  <section style="padding: 80px 20px; text-align: center; max-width: 900px; margin: 0 auto;">
    <h1 style="font-weight: 900; font-size: 3rem; margin-bottom: 20px;">ABOUT US</h1>
    <p style="font-size: 1.1rem; line-height: 1.6; color: var(--ok-deep-sky);">
      Okolona Church of Christ is a community driven by energy and light. 
      Adhering to our core principles, we seek to foster recognition, trust, and loyalty.
    </p>
  </section>

  <div style="margin-top: 20px;">
    {sortedBeliefs.map((belief, index) => (
      <section style={`padding: 60px 20px; background-color: ${index % 2 === 0 ? 'var(--ok-white)' : 'var(--ok-cream)'};`}>
        <div style="max-width: 800px; margin: 0 auto;">
          <h2 style="font-weight: 900; color: var(--ok-blue); margin-bottom: 15px;">{belief.data.title.toUpperCase()}</h2>
          <div style="line-height: 1.8; font-size: 1rem; color: var(--ok-deep-sky);">
             {belief.body}
          </div>
          <div style="height: 4px; width: 60px; background-color: var(--ok-yellow); margin-top: 20px;"></div>
        </div>
      </section>
    ))}
  </div>
</MainLayout>
